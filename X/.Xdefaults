Xlock.mousemotion: on
Xautolock.time: 1
Xautolock.cornersize: 10
Xautolock.corners: ++++
Xautolock.cornerdelay: 3
Xautolock.cornerredelay: 15
Xautolock.noclose: true
Xautolock.locker: "xlock -mode random -mousemotion -remote -nice 19 -modelist nose -fullrandom -neighbors 0 -bg black -fg white -background black -foreground white"

! Xft settings -------- Taken from http://wiki.archlinux.org/index.php/Xdefaults
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

! terminal colors ----- also taken from Arch Wiki

! tangoesque scheme
XTerm*background: #000000
XTerm*foreground: #eeeeee
! Black (not tango) + DarkGrey
*color0:  #444444
*color8:  #808080
! DarkRed + Red
*color1:  #d70000
*color9:  #ff5f00
! DarkGreen + Green
*color2:  #00af00
*color10: #5fd700
! DarkYellow + Yellow
*color3:  #d7d700
*color11: #ffd700
! DarkBlue + Blue
*color4:  #005fff
*color12: #00afff
! DarkMangenta + Mangenta
*color5:  #af5faf
*color13: #ff00af
!DarkCyan + Cyan (both not tango)
*color6:  #008787
*color14: #5fd7ff
! LightGrey + White
*color7:  #c6c6c6
*color15: #eeeeee

URxvt*depth: 32
URxvt*background: rgba:0001/0001/0001/cccc
URxvt*foreground: white
!URxvt*transparent: true
URxvt*shading: 60
!URxvt*fading: 40
URxvt*iconFile: /usr/share/pixmaps/rxvt-unicode.png
URxvt*font: xft:DejaVu Sans Mono:pixelsize=12:autohint=true,[codeset=JISX0208]xft:Togoshi Mincho:antialias=false
URxvt*boldFont: xft:DejaVu Sans Mono:bold:pixelsize=12:autohint=true,[codeset=JISX0208]xft:Togoshi Mincho:antialias=false
URxvt*italicFont: xft:DejaVu Sans Mono:italic:pixelsize=12:autohint=true,[codeset=JISX0208]xft:Togoshi Mincho:antialias=false
URxvt*boldItalicFont: xft:DejaVu Sans Mono:bold:italic:pixelsize=12:autohint=true,[codeset=JISX0208]xft:Togoshi Mincho:antialias=false
URxvt*scrollBar: off
URxvt*geometry: 120x40
URxvt*scrollstyle: plain
URxvt*visualBell: true
URxvt*pasteableTabs: true
URxvt*cursorColor: green
URxvt*cursorBlink: true
URxvt*cursorUnderline: true
URxvt*pointerColor: yellow
URxvt*mapAlert: true
URxvt*urgentOnBell: true
!URxvt*borderColor: blue
!URxvt*internalBorder: 1
!URxvt*externalBorder: 0
! urlLauncher settings ----- Taken from http://wiki.archlinux.org/index.php/Xdefaults
URxvt*perl-lib:           /usr/lib/urxvt/perl/
URxvt*perl-ext-common:    default,matcher,xim-onthespot,selection-pastebin
URxvt*url-launcher:       /usr/bin/firefox
URxvt*matcher.button:     1
! urxvt tab colors
URxvt.tabbed.tabbar-fg: 4
URxvt.tabbed.tabbar-bg: 8
URxvt.tabbed.tab-fg: 14
URxvt.tabbed.tab-bg: 8
! Enable iBus/SCIM support
URxvt*inputMethod: ibus
URxvt*preeditType: OnTheSpot,None
URxvt*imLocale: ja_JP.UTF-8

!ROOT*background: rgba:2222/1111/1111/eeee
!ROOT*borderColor: red
!ROOT*internalBorder: 8
!ROOT*geometry:120x48
!ROOT*font: xft:Monospace:pixelsize=12:autohint=true

