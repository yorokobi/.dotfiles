# vi mode
set-window-option -g mode-keys vi
set-option -g status-keys vi
set -g default-terminal "screen-256color"

# misc settings
set-window-option -g utf8 on
set-window-option -g automatic-rename on
set-window-option -g mode-mouse on
set-window-option -g remain-on-exit on
set bell-action any

# statusbar
set -g status-bg colour235
set -g status-fg cyan
#setw -g window-status-bg colour233
setw -g window-status-current-bg colour235
setw -g window-status-current-fg cyan
setw -g window-status-current-attr bright,underscore
set-option -g pane-border-fg colour235
set-option -g pane-border-bg black
set-option -g pane-active-border-fg white
set-option -g pane-active-border-bg colour17

# Notification
set-option -g visual-activity on
#set-window-option -g monitor-activity on

# Terminal title bar
set-option -g set-titles on
set-option -g set-titles-string '#S:#I.#P #W'

# other
#set-option -g lock-after-time 1800
set-window-option -g clock-mode-style 24

set -g default-command zsh
set -g status-right-length 70
set -g status-right "#[fg=colour62]#(~/.screen-bin/nb-users)#[fg=white,bold] | #[fg=colour244]#(~/.screen-bin/uptime.pl)#[fg=colour238] #(~/.screen-bin/load-average)#[fg=white,bold] | #[default]%F %H:%M"
set -g status-left-length 14
set-option -g status-left-bg colour18
set-option -g status-left-fg yellow
set-option -g status-left-attr bright

# Statusbar properties.
# Update every 10 seconds
set -g display-time 10000

# Use c-t instead of c-b as the prefix
unbind C-b
set -g prefix C-t
bind C-t send-prefix
bind t send-prefix

# open a man page in new window
bind / command-prompt "split-window 'exec man %%'"

# open a ssh shell to a remote host
bind S command-prompt "neww 'exec ssh %%'"

# quick view of processes
bind '~' split-window "exec htop"

# scrollback buffer n lines
set -g history-limit 5000

bind O select-pane -t :.-
bind | split-window -h
bind v split-window "exec vim"
